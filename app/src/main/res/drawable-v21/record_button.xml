<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorGradientDark">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/colorGradientDark" />
            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke android:width="3dp"
                android:color="#FFEFC7"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="@color/colorGradientLight"
                android:startColor="@color/colorGradientLight" />

            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke android:width="3dp"
                android:color="#FFEFC7"/>
        </shape>
    </item>
</ripple>